{
    /*
    name will also be used as output file(s) name like "name.json".   
    */
    "name": "Pd_Rh_cvmt",

    /*
    descripton your calculation. it's optional
    */
    "description": "PdRu solubility limit calculation with tetrahedron approximation",


    /*
    Crystal structure

    Please use Strukturbericht symbol method. For example: Cu => A1; W => A2
    */
    "structure": "A1",


    /*
    Cluster

    Which sit will be chosen to export entropy term. Assume cube length as 1.
    */
    "cluster": [[0.0, 0.0, 0.0],
                [0.5, 0.5, 0.0],
                [0.0, 0.5, 0.5],
                [0.5, 0.0, 0.5]],

    /*
    elements concentration
    must be normalized
    */
    "x_1": 0.05,

    /*
    Interaction energy
    */
    "int_en": {
        "pair": [
            -0.0500000
            ],
        "trip": [0.005],
        "tetra": [0.008]
    },

    /*
    Chemical potential

    Chemical potential can be setted as a single value or continuous as [star, end, num]
    */
    "delta_mu": [-0.003, 0.003, 5],

    /*
    Temperature (K)

    Temperature can be setted as a single value or continuous as [star, end, num]
    */
    "temp": [100, 1500, 29],

    /*
    Boltzmann constant
    */
    "bzc": 8.6173324E-5
}